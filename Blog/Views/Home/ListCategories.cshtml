@model List<Blog.Models.Category>

@{
    ViewBag.Title = "List";
}
<div class="container">

    <div class="row">

        @foreach (var category in Model)
            {
            <div class="col-md-2 text-center text-uppercase">
                <p>
                    <h4>
                        @Html.ActionLink(string.Format($"{category.Name} "),
                            "ListArticles", "Home", new {@categoryId = category.Id}, null)
                    </h4>
                   
                </p>
            </div>
        }
    </div>
</div>
<hr />