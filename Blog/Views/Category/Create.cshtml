@model Blog.Models.Category

@{

    ViewBag.Title = "Create";

}


<div class="container">
    <div class="well">
        <h2>Create Category</h2>
        @using (@Html.BeginForm("Create", "Category", null, FormMethod.Post, new { enctype = "multipart/form-data" }))

        {
            <div class="form-horizontal">
                <div class="form-group span=8 offset=2">
                    @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Logo", new { @class = "control-label col-sm-4" })
                    <span class="col-sm-4">
                        <input type="file" id="Avatar" name="upload" />
                    </span>
                </div>
                <span class="form-group">
                    <span class="col-sm-offset-4 col-sm-4">
                        @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-default" })
                        <input type="submit" value="Create" class="btn btn-success" />
                    </span>
                </span>
            </div>
                }
            </div>
            
</div>
