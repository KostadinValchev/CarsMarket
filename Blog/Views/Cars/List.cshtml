@model List<Blog.Models.Cars>



@{

    ViewBag.Title = "List";

}



<div class="container">

    <div class="well">

        <h2>Create Car Category - @Html.ActionLink("Create", "Create", "Cars", null, new { @class = "btn btn-warning" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Actions</th>
                        </tr>
                    </thead>
                <tbody>
                    @foreach (var cars in Model)
                    {
                        <tr>
                            <td>@cars.CarsId</td>
                            <td>@cars.Name</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Cars", new { @id = cars.CarsId }, null)
                                @Html.ActionLink("Delete", "Delete", "Cars", new { @id = cars.CarsId }, null)
                                </td>
                            </tr>
                     }
                    </tbody>
                </table>
            </div>
        </div>
</div>